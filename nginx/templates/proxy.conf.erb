proxy_cache_path <%= here %>/tmp/data levels=1:2 keys_zone=default:8m max_size=1000m inactive=30d;
proxy_temp_path  <%= here %>/tmp/;

server {
  listen 80;
  server_name cachecontroller.dev;
  
  include proxy_location.conf;
}

server {
  listen 443;
  server_name cachecontroller.dev;

  include proxy_location.conf;

  ssl    on;
  ssl_certificate     <%= certificate_path %>;
  ssl_certificate_key <%= certificate_key_path %>;
}
